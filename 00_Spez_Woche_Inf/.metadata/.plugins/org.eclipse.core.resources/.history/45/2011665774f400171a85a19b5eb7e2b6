package LED;

import ch.ntb.inf.deep.runtime.mpc555.driver.*;
import ch.ntb.inf.deep.runtime.ppc32.Task;

public class RunningLight extends Task{

	final static short pinA=5, pinB=6, pinC=7, pinD=8, pinE=14;
	public  static MPIOSM_DIO ledA, ledB, ledC, ledD, swichE;
	
	public RunningLight() {
		ledA=new MPIOSM_DIO(pinA, true);
		ledB=new MPIOSM_DIO(pinB, true);
		ledC=new MPIOSM_DIO(pinC, true);
		ledD=new MPIOSM_DIO(pinD, true);
		swichE=new MPIOSM_DIO(pinE, false);
		ledA.set(false);
		ledB.set(false);
		ledC.set(false);
		ledD.set(false);
	}
	
	static {
		SCI sci1 = SCI.getInstance(SCI.pSCI1);
		sci1.start(9600,  SCI.NO_PARITY, (short)8);
		Task task = new RunningLight();
		task.period=1000;
		Task.install(task);
	}
	
	
	public void action()
	{
		if(swichE.get()==true)
		{
			if (!ledA.get() && !ledB.get() && !ledC.get()&& !ledD.get())
			{
				ledA.set(true);
			}
			else if(ledA.get()==true) 
				{
				ledA.set(!ledA.get());
				ledB.set(!ledB.get());
				}
			else if(ledB.get()==true)
			{
				ledB.set(!ledB.get());
				ledC.set(!ledC.get());
			}
			else if(ledC.get()==true)
			{
				ledC.set(!ledC.get());
				ledD.set(!ledD.get());
			}
			else if(ledD.get()==true);
			{
				ledD.set(!ledD.get());
				ledA.set(!ledA.get());
			}
		}
		else if(swichE.get()==false)
		{
			if (!ledA.get() && !ledB.get() && !ledC.get()&& !ledD.get())
			{
				ledD.set(true);
			}
			else if(ledA.get()==true) 
				{
				ledA.set(!ledA.get());
				ledD.set(!ledD.get());
				}
			else if(ledD.get()==true)
			{
				ledD.set(!ledD.get());
				ledC.set(!ledC.get());
			}
			else if(ledC.get()==true)
			{
				ledC.set(!ledC.get());
				ledB.set(!ledB.get());
			}
			else if(ledB.get()==true);
			{
				ledB.set(!ledB.get());
				ledA.set(!ledA.get());
			}
			}
	}
	
	
	public static void ledOff()
	{
		ledA.set(false);
		ledB.set(false);
		ledC.set(false);
		ledD.set(false);
	}
	
	
}