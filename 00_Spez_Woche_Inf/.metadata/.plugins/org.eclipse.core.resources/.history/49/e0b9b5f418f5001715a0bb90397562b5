package Motor;

import ch.ntb.inf.deep.runtime.mpc555.driver.TPU_PWM;
import ch.ntb.inf.deep.runtime.ppc32.Task;

public class MotorA extends Task {
	private final int testChannel = 0;
	private final boolean useTPUA = true;
	// pwmPeriod in TimeBase Unit (50’000 ns)
	private final int pwmPeriod = 50000 / TPU_PWM.tpuTimeBase;

	public static int highTime = 0 / TPU_PWM.tpuTimeBase;
	public static int newHighTime=2200000 / TPU_PWM.tpuTimeBase;

	private static TPU_PWM pwm;

	public ServoA(){
 pwm = new TPU_PWM(useTPUA, testChannel, pwmPeriod, highTime);
period = 5000; // Periodenlaenge des Tasks in ms
Task.install(this);
 }

	
	public void action() {
		highTime = (highTime + pwmPeriod / 4) % pwmPeriod;
		pwm.update(highTime);
	}
	
	/*
	public void action()
	{
		if(highTime==1200000 / TPU_PWM.tpuTimeBase)
		{
			newHighTime=2200000 / TPU_PWM.tpuTimeBase;
		}
		else if(highTime==2200000 / TPU_PWM.tpuTimeBase)
		{
			newHighTime=1200000 / TPU_PWM.tpuTimeBase;
		}
		newPos();
	}
	*/

	static { // Task Initialisierung
		new MotorA();
	}
	
	public static void newPos()
	{
		highTime=newHighTime;
		pwm.update(highTime);
		
	}
}
