package Robot;

import java.io.PrintStream;
import ch.ntb.inf.deep.runtime.ppc32.Task;
import Encoder.*;
import I_O_s.*;
import Communication.*;
import Motors.*;
import Sensors.*;

public class Robot extends Task {
	
	private static Communication communication;
	private static I_O_s ios;
	boolean kom = true;
	boolean land = true;
	int i =0;
	
	public Robot() throws Exception {
		communication = new Communication();
		ios = new I_O_s();
	}
	
	private static enum States
	{
		booting,
		start,
		searchPosition,
		dockPosition,
		tilting,
		end,
		communicationFailure
	}
	
	private States state;

	public void action(){
		
		switch(state){
		
		case booting:
			
			break;
			
		case start:
			if(ios.getStartSwitch()){
				communication.sendData(1);
			}
			
			break;
			
		case searchPosition:
			
			break;
			
		case dockPosition:
			
			break;
		
		case tilting:
			
			break;
			
		case end:
			
			break;
			
		case communicationFailure:
			
			break;
			
		default:
			
			break;
		}
	}
	

	static {		
		
		// Initialize task

		try {
			Robot task = new Robot();
			task.period = 100;
			Task.install(task);
			
		} catch (Exception e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}

}